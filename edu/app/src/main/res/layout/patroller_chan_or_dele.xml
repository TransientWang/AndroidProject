<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:id="@+id/namelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginRight="0.5px"
            android:layout_marginTop="25dp"
            android:layout_weight="1"
            android:background="@drawable/logbck"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="学生姓名：" />

            <EditText
                android:id="@+id/detailedname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:inputType="text"
                android:maxLength="4" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/classlayout"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="0.5px"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@id/namelayout"
            android:layout_weight="1"

            android:background="@drawable/logbck"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="班级：" />

            <EditText
                android:id="@+id/detailedclass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:hint="专业+班级                      "
                android:maxLength="10" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/eventlayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/logbck"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"

            android:layout_height="29dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="0dp"
            android:text="事件：" />

        <EditText

            android:id="@+id/detailed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:background="@null"
            android:hint="请输入..." />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/eventlayout"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/logbck">

        <TextView

            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/timetext"
            android:layout_marginLeft="15dp"
            android:text="日期：" />

        <TextView
            android:id="@+id/detailedtime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"

            android:layout_toRightOf="@id/textView3" />

        <Button
            android:id="@+id/databutton"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"

            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:text="选择日期"
            android:textColor="#767272" />
    </RelativeLayout>


    <LinearLayout

        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/namelayout"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/logbck"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:text="学号：" />

        <EditText
            android:id="@+id/detailednumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:maxLength="11" />
    </LinearLayout>

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/submit_bg"
    android:text="提交"
    android:id="@+id/sub"
    android:layout_marginTop="14dp"
    android:layout_below="@+id/relativeLayout2"
    android:layout_alignEnd="@+id/relativeLayout2" />



</RelativeLayout>