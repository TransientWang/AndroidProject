<?xml version="1.0" encoding="utf-8"?>
<com.example.edu.footer.FooterView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    >
    <LinearLayout
        android:visibility="gone"
      android:gravity="center"
        android:id="@+id/dping"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

<com.example.edu.headers.CircularProgress
    android:layout_width="20dp"
    android:layout_height="20dp"
    android:id="@+id/footpro"/>
        <TextView
            android:gravity="center_vertical"
            android:id="@+id/foottext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正在加载中..." />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/dup"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/upcomplie"/>
        <TextView
            android:gravity="center_vertical"
            android:id="@+id/foottext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上拉加载" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ddown"
        android:gravity="center"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/loadcomplie"/>
        <TextView
            android:gravity="center_vertical"
            android:id="@+id/foottext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载完成" />
    </LinearLayout>

</com.example.edu.footer.FooterView>
