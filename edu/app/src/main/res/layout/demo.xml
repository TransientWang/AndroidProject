<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_drawer"
    android:layout_width="150dp"
    android:layout_height="match_parent"
    android:layout_gravity="left"

    android:background="@drawable/drawer_bgk">

    <LinearLayout
        android:id="@+id/changelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bindlayout"
        android:layout_marginBottom="20dp"

        android:background="#ffffff">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="34dp"
                android:text="修改密码"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/imageView4"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="26dp"
                android:src="@mipmap/changpassword" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/updatelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/changelayout"
        android:layout_marginBottom="20dp"
        android:background="#fff">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="34dp"
                android:text="检查更新"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/imageView4"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="26dp"
                android:src="@mipmap/update_" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bindlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/drawlogout"
        android:layout_marginBottom="20dp"
        android:background="#fff">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="34dp"
                android:text="绑定学号"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/imageView4"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="26dp"
                android:src="@mipmap/bind" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/drawlogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/drawexit"
        android:layout_marginBottom="20dp"
        android:background="#fff">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="注销"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/imageView4"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="26dp"
                android:src="@mipmap/logout" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/drawexit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="end"
        android:background="#fff">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"

                android:text="退出"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/imageView4"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="26dp"
                android:src="@mipmap/exit" />
        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>