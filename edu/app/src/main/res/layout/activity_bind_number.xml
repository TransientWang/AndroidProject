<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:background="#fff"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"



    >
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bind_num_tool_bgk"
         android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绑定学号"
            android:textSize="20dp"
            android:textColor="#fff"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="21dp"
            android:id="@+id/textView5" />
        <ImageButton
            android:id="@+id/bin_return"
            android:background="#00000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bind_tool_bck_bgk"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="11dp" />
</RelativeLayout>
    <RelativeLayout
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/bind_bgk"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/toolbar"
        android:id="@+id/relativeLayout">
        <TextView
            android:id="@+id/bind_te"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="学 号："
            android:textSize="20dp"

             android:gravity="center_vertical"

            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/bnum" />
        <EditText
            android:id="@+id/bnum"
            android:background="@null"

            android:layout_width="200dp"
            android:layout_height="25dp"
            android:digits="1234567890z"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@+id/bind_te" />

    </RelativeLayout>
<RelativeLayout
    android:layout_marginTop="13dp"
    android:background="#1296db"
    android:layout_width="80dp"
    android:layout_height="35dp"

    android:id="@+id/linearLayout4"
    android:layout_below="@+id/relativeLayout"
    android:layout_alignEnd="@+id/relativeLayout">

    <Button
        android:id="@+id/bind_but"
        android:layout_width="116dp"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:text="绑定"
        />
</RelativeLayout>


</RelativeLayout>
